<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >
        <RelativeLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:paddingVertical="@dimen/text_margin"
                     >
            <TextView
                    android:id="@+id/start_fragment__project_title_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title"
                    android:textAlignment="center"
                    android:fontFamily="serif"
                    android:textSize="27sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"/>

            <TextView
                    android:id="@+id/start_fragment__project_subtitle_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/start_fragment__project_title_textView"
                    android:text="@string/subtitle"
                    android:textAlignment="center"
                    android:fontFamily="serif"
                    android:minLines="3"
                    android:textSize="20sp"
                    android:textColor="@color/black_overlay"
                    android:textAllCaps="false"/>

            <ImageView
                    android:id="@+id/start_fragment__chevron"
                    android:src="@drawable/chevron_320px"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_height="300dp"
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"
                     android:layout_below="@id/start_fragment__project_subtitle_textView"
            />

            <!--Remove this to remove names of developers. Start-->
            <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/text_margin"
                    android:layout_below="@id/start_fragment__chevron"
                    android:layout_alignParentBottom="true"
                    android:stretchColumns="0"
            >
                <TableRow>
                    <TextView
                        android:layout_column="0"
                        android:textStyle="bold"
                        android:text="Руководитель:"
                    />
                    <TextView
                            android:textStyle="bold"
                            android:text="Ответственный"
                    />
                </TableRow>
                <TableRow>
                    <TextView
                            android:layout_column="0"
                            android:text="начальник цикла"
                    />
                    <TextView
                            android:textStyle="bold"
                            android:text="исполнитель:"
                    />
                </TableRow>
                <TableRow>
                    <TextView
                            android:layout_column="0"
                            android:text="Романовский С.В."
                    />
                    <TextView
                            android:text="Черныш Н.Н."
                    />
                </TableRow>
                <TableRow>
                    <TextView
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:layout_span="2"
                            android:text="Исполнители:"
                    />


                </TableRow>
                <TableRow>
                    <TextView
                            android:layout_column="0"
                            android:text="Гуз И.П."
                    />
                    <TextView
                            android:layout_column="1"
                            android:text="Линник Г.И."
                    />
                </TableRow>
                <TableRow>
                    <TextView
                            android:layout_column="0"
                            android:text="Машуков Н.А."
                    />
                    <TextView
                            android:layout_column="1"
                            android:text="Френкель М.Г."
                    />
                </TableRow>
                <TableRow>
                    <TextView
                            android:layout_column="0"
                            android:text="Шепелевич С.А."
                    />
                </TableRow>

            </TableLayout>
            <!--End-->
</RelativeLayout>
    </ScrollView>
</LinearLayout>